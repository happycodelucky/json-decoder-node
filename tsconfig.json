{
    "compilerOptions": {
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dev",
        "pretty": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "target": "es2017",
        "traceResolution": false,
        "types": ["ajv", "mocha", "node", "reflect-metadata"],
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.*"
    ],
    "exclude":[
        "node_modules"
    ]
}