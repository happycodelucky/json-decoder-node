{
    "compilerOptions": {
        "allowJs": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "watch": true
    },
    "compileOnSave": true,
    "include": [
        "*.ts",
        "examples/**/*.ts",
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}