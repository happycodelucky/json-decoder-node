{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "dts",
        "experimentalDecorators": true,
        "importHelpers": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "noEmitOnError": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "pretty": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "target": "es6",
        "traceResolution": false,
        "types": ["ajv", "mocha", "node", "reflect-metadata"],
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude":[
        "node_modules"
    ]
}